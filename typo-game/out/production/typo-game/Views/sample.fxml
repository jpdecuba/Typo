<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="720" minWidth="1240" style="-fx-background-color: #fffafa;" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Controller">
    <children>
        <VBox alignment="CENTER" spacing="15" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
            <children>
                <Button fx:id="SingleplayerBtn" alignment="CENTER" mnemonicParsing="false" onAction="#btnClick" prefHeight="60.0" prefWidth="540.0" style="-fx-background-color: b0c4de; -fx-background-radius: 15;" text="Singleplayer">
               <font>
                  <Font ipAddress="Tahoma Bold" size="16.0" />
               </font></Button>
                <Button fx:id="MultiplayerBtn" alignment="CENTER" mnemonicParsing="false" onAction="#btnClick" prefHeight="60.0" prefWidth="540.0" style="-fx-background-color: b0c4de; -fx-background-radius: 15;" text="Multiplayer">
               <font>
                  <Font ipAddress="Tahoma Bold" size="16.0" />
               </font></Button>
                <Button fx:id="HighscoreBtn" alignment="CENTER" mnemonicParsing="false" onAction="#btnClick" prefHeight="60.0" prefWidth="540.0" style="-fx-background-color: b0c4de; -fx-background-radius: 15;" text="Highscore" textAlignment="CENTER">
               <font>
                  <Font ipAddress="Tahoma Bold" size="16.0" />
               </font></Button>
            <HBox alignment="CENTER" spacing="15">
                <children>
                    <Button fx:id="SettingsBtn" alignment="CENTER" mnemonicParsing="false" onAction="#btnClick" prefHeight="60.0" prefWidth="262.5" style="-fx-background-color: b0c4de; -fx-background-radius: 15;" text="Settings">
                     <font>
                        <Font ipAddress="Tahoma Bold" size="16.0" />
                     </font></Button>
                    <Button fx:id="ExitBtn" alignment="CENTER" mnemonicParsing="false" onAction="#btnClick" prefHeight="60.0" prefWidth="262.5" style="-fx-background-color: b0c4de; -fx-background-radius: 15;" text="Exit" textAlignment="CENTER">
                     <font>
                        <Font ipAddress="Tahoma Bold" size="16.0" />
                     </font></Button>
                </children>
            </HBox>

            </children>
        </VBox>
    </children>
</AnchorPane>
