<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchor" prefHeight="720.0" prefWidth="1240.0" xmlns="http://javafx.com/javafx/8.0.121"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.HighScoreController">
    <children>
        <GridPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                  AnchorPane.topAnchor="0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints percentHeight="20" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints percentHeight="60" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints percentHeight="20" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="High Score" textFill="WHITE" GridPane.columnIndex="0" GridPane.halignment="CENTER"
                       GridPane.rowIndex="0">
                    <font>
                        <Font size="36.0"/>
                    </font>
                </Label>
                <VBox alignment="CENTER_LEFT" spacing="15" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <children>
                        <HBox alignment="CENTER" prefHeight="500.0" prefWidth="500.0">
                            <children>
                                <VBox alignment="TOP_LEFT" prefHeight="100.0" prefWidth="250.0" spacing="15">
                                    <children>
                                        <Button fx:id="btnMode" mnemonicParsing="false" onAction="#btnModeClick"
                                                prefHeight="60.0" prefWidth="220"
                                                style="-fx-background-color: b0c4de; -fx-background-radius: 15;"
                                                text="Singleplayer" textAlignment="CENTER">
                                            <font>
                                                <Font name="Tahoma Bold" size="16.0"/>
                                            </font>
                                        </Button>
                                        <Button fx:id="btnBeginner_Easy" alignment="CENTER" mnemonicParsing="false"
                                                onAction="#btnClick" prefHeight="60.0" prefWidth="220"
                                                style="-fx-background-color: b0c4de; -fx-background-radius: 10;"
                                                text="Beginner" textAlignment="CENTER">
                                            <font>
                                                <Font name="Tahoma Bold" size="16.0"/>
                                            </font>
                                        </Button>
                                        <Button fx:id="btnExpert_Normal" alignment="CENTER" mnemonicParsing="false"
                                                onAction="#btnClick" prefHeight="60.0" prefWidth="220"
                                                style="-fx-background-color: b0c4de; -fx-background-radius: 10;"
                                                text="Expert" textAlignment="CENTER">
                                            <font>
                                                <Font name="Tahoma Bold" size="16.0"/>
                                            </font>
                                        </Button>
                                        <Button fx:id="btnHard" alignment="CENTER" mnemonicParsing="false"
                                                onAction="#btnClick" prefHeight="60.0" prefWidth="220"
                                                style="-fx-background-color: b0c4de; -fx-background-radius: 10;"
                                                text="Hard" textAlignment="CENTER">
                                            <font>
                                                <Font name="Tahoma Bold" size="16.0"/>
                                            </font>
                                        </Button>
                                        <Button fx:id="btnBack" alignment="CENTER" mnemonicParsing="false"
                                                onAction="#btnBackClick" prefHeight="60.0" prefWidth="220"
                                                style="-fx-background-color: b0c4de; -fx-background-radius: 10;"
                                                text="Back" textAlignment="CENTER">
                                            <font>
                                                <Font name="Tahoma Bold" size="16.0"/>
                                            </font>
                                        </Button>
                                    </children>
                                </VBox>
                                <GridPane fx:id="lvHighscores" alignment="TOP_RIGHT" prefHeight="200.0"
                                          prefWidth="475.0">
                                    <columnConstraints>
                                        <ColumnConstraints minWidth="10.0" percentWidth="10"/>
                                        <ColumnConstraints minWidth="10.0" percentWidth="60"/>
                                        <ColumnConstraints minWidth="10.0" percentWidth="20"/>
                                    </columnConstraints>
                                </GridPane>
                            </children>
                        </HBox>
                    </children>
                </VBox>
                <Label text="Global Chat" textFill="WHITE" GridPane.columnIndex="1" GridPane.halignment="CENTER"
                       GridPane.rowIndex="0">
                    <font>
                        <Font size="36.0"/>
                    </font>
                </Label>
                <VBox alignment="TOP_CENTER" prefWidth="478.0" minHeight="300" spacing="15"
                      style="-fx-background-color: b0c4de" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets bottom="20" left="20" right="20" top="0"/>
                    </GridPane.margin>
                </VBox>
                <GridPane GridPane.columnIndex="1" GridPane.rowIndex="2" alignment="TOP_CENTER" prefWidth="478">
                    <GridPane.margin>
                        <Insets bottom="20" left="20" right="20" top="0"/>
                    </GridPane.margin>
                    <columnConstraints>
                        <ColumnConstraints minWidth="10.0" percentWidth="92"/>
                        <ColumnConstraints minWidth="10.0" percentWidth="8"/>
                    </columnConstraints>
                    <children>
                        <TextField fx:id="messageBox" GridPane.columnIndex="0" prefHeight="45"/>
                        <Button fx:id="sendBtn" mnemonicParsing="false" GridPane.columnIndex="1" prefWidth="45"
                                prefHeight="45"/>
                    </children>
                </GridPane>
            </children>
        </GridPane>
    </children>
</AnchorPane>
