<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Label?>
<AnchorPane prefHeight="720.0" prefWidth="1240.0" xmlns="http://javafx.com/javafx/8.0.121"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.HighScoreController">
    <children>
        <VBox alignment="TOP_CENTER" spacing="15" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
              AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
            <children>
                <Label text="High Score">
                    <font>
                        <Font size="36.0"/>
                    </font>
                </Label>
                <HBox alignment="CENTER" prefHeight="500.0" prefWidth="500.0" spacing="100" AnchorPane.leftAnchor="0"
                      AnchorPane.rightAnchor="0">
                    <children>
                        <VBox alignment="CENTER" prefHeight="100.0" prefWidth="300.0" spacing="15"
                              AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
                            <children>
                                <Button fx:id="btnMode" alignment="CENTER" mnemonicParsing="false"
                                        onAction="#btnModeClick"
                                        prefHeight="60.0" prefWidth="262.5"
                                        style="-fx-background-color: b0c4de; -fx-background-radius: 15;"
                                        text="Singleplayer"
                                        textAlignment="CENTER">
                                    <font>
                                        <Font name="Tahoma Bold" size="16.0"/>
                                    </font>
                                </Button>
                                <Button fx:id="btnBeginner_Easy" alignment="CENTER" mnemonicParsing="false"
                                        onAction="#btnClick"
                                        prefHeight="60.0" prefWidth="262.5"
                                        style="-fx-background-color: b0c4de; -fx-background-radius: 15;"
                                        text="Beginner"
                                        textAlignment="CENTER">
                                    <font>
                                        <Font name="Tahoma Bold" size="16.0"/>
                                    </font>
                                </Button>
                                <Button fx:id="btnExpert_Normal" alignment="CENTER" mnemonicParsing="false"
                                        onAction="#btnClick"
                                        prefHeight="60.0" prefWidth="262.5"
                                        style="-fx-background-color: b0c4de; -fx-background-radius: 15;"
                                        text="Expert"
                                        textAlignment="CENTER">
                                    <font>
                                        <Font name="Tahoma Bold" size="16.0"/>
                                    </font>
                                </Button>
                                <Button fx:id="btnHard" alignment="CENTER" mnemonicParsing="false" onAction="#btnClick"
                                        prefHeight="60.0" prefWidth="262.5"
                                        style="-fx-background-color: b0c4de; -fx-background-radius: 15;"
                                        text="Hard"
                                        textAlignment="CENTER">
                                    <font>
                                        <Font name="Tahoma Bold" size="16.0"/>
                                    </font>
                                </Button>
                                <Button fx:id="BackBtn" alignment="CENTER" mnemonicParsing="false" onAction="#btnClick"
                                        prefHeight="60.0" prefWidth="262.5"
                                        style="-fx-background-color: Black; -fx-background-radius: 15;" text="Back"
                                        textFill="LIGHTSTEELBLUE"
                                        textAlignment="CENTER">
                                    <font>
                                        <Font name="Tahoma Bold" size="16.0"/>
                                    </font>
                                </Button>
                            </children>
                        </VBox>
                        <GridPane alignment="CENTER" fx:id="lvHighscores" prefHeight="200.0" minWidth="200.0"
                                  AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
                            <columnConstraints>
                                <ColumnConstraints minWidth="10.0" percentWidth="27"/>
                                <ColumnConstraints minWidth="10.0" percentWidth="27"/>
                                <ColumnConstraints minWidth="10.0" percentWidth="27"/>
                            </columnConstraints>
                        </GridPane>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
